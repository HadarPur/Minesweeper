<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/island2"
    tools:context="com.example.hadar.minesweeper.ScoreActivity">

    <TextView
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="180px"
        android:background="@drawable/table"
        android:gravity="center"
        android:textSize="25dp"
        android:textColor="#FF000000"
        android:text="BREAKING NEW RECORD"
        android:textStyle="bold"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/sendName"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/enterName"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:gravity="center"
        android:background="@drawable/table"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#FF000000"
        android:text="Enter your name:"
        android:layout_above="@+id/recordName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/recordName"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:gravity="center"
        android:background="@drawable/table"
        android:textSize="25dp"
        android:inputType="text"
        android:layout_above="@+id/sendName"
        android:layout_marginBottom="50dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sendName"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/table"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#FF000000"
            android:text="save"
            android:layout_alignTop="@+id/cancel"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:background="@drawable/table"
            android:gravity="center"
            android:text="cancel"
            android:textColor="#FF000000"
            android:textSize="25dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</LinearLayout>
